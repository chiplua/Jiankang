<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_background"
    tools:context="com.chiplua.jiankang.CommonDetailActivity">

    <LinearLayout
        android:orientation="vertical"
        android:background="#ccffffff"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
            android:id="@+id/detail_name"
            android:textColor="#000000"
            android:textSize="30sp"
            android:gravity="left"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxEms="8"
            android:layout_width="fill_parent"
            android:layout_height="60dp" />

        <View
            android:background="@android:color/black"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_margin="10dp" />

        <ScrollView
            android:id="@+id/detail_list"
            android:paddingTop="0dp"
            android:background="#CCCCCC"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:padding="6dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/detail_describe"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:padding="5sp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:background="@android:color/black"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip" />


                <Button
                    android:id="@+id/normal_value_button"
                    android:text="正常值："
                    android:background="@drawable/detail_button_selector"
                    android:drawableRight="@drawable/right_arrow"
                    android:textSize="30sp"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp" />
                <View
                    android:background="@android:color/black"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip" />
                <TextView
                    android:id="@+id/normal_value_text"
                    android:visibility="gone"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:padding="5sp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/clinic_significance_button"
                    android:text="临床意义:"
                    android:background="@drawable/detail_button_selector"
                    android:drawableRight="@drawable/right_arrow"
                    android:textSize="30sp"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp" />
                <View
                    android:background="@android:color/black"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip" />
                <TextView
                    android:id="@+id/clinic_significance_text"
                    android:visibility="gone"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:padding="5sp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/matters_attention_button"
                    android:text="注意事项:"
                    android:background="@drawable/detail_button_selector"
                    android:drawableRight="@drawable/right_arrow"
                    android:textSize="30sp"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp" />
                <View
                    android:background="@android:color/black"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip" />
                <TextView
                    android:id="@+id/matters_attention_text"
                    android:visibility="gone"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:padding="5sp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/check_up_button"
                    android:text="检查过程:"
                    android:background="@drawable/detail_button_selector"
                    android:drawableRight="@drawable/right_arrow"
                    android:textSize="30sp"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp" />
                <View
                    android:background="@android:color/black"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip" />
                <TextView
                    android:id="@+id/check_up_text"
                    android:visibility="gone"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:padding="5sp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/related_disease_button"
                    android:text="相关疾病:"
                    android:background="@drawable/detail_button_selector"
                    android:drawableRight="@drawable/right_arrow"
                    android:textSize="30sp"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp" />
                <View
                    android:background="@android:color/black"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip" />
                <TextView
                    android:id="@+id/related_disease_text"
                    android:visibility="gone"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:padding="5sp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/related_symptoms_button"
                    android:text="相关症状:"
                    android:background="@drawable/detail_button_selector"
                    android:drawableRight="@drawable/right_arrow"
                    android:textSize="30sp"
                    android:gravity="center_vertical"
                    android:textColor="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="80dp" />
                <View
                    android:background="@android:color/black"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dip" />
                <TextView
                    android:id="@+id/related_symptoms_text"
                    android:visibility="gone"
                    android:textColor="#000000"
                    android:textSize="25sp"
                    android:padding="5sp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
